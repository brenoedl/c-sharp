        <Label Content="Ínicio: " HorizontalAlignment="Left" Margin="28,25,0,0" VerticalAlignment="Top" FontSize="20"/>
        <TextBox x:Name="txtInicio" HorizontalAlignment="Left" Margin="112,31,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontSize="20"/>
        <Label Content="Fim: " HorizontalAlignment="Left" Margin="32,91,0,0" VerticalAlignment="Top" FontSize="20" Height="36" Width="51"/>
        <TextBox x:Name="txtFim" HorizontalAlignment="Left" Margin="113,98,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontSize="20"/>
        <Button x:Name="btnSortear" Content="Sortear" HorizontalAlignment="Left" Margin="85,184,0,0" VerticalAlignment="Top" FontSize="20" Height="40" Width="78" Click="btnSortear_Click"/>
        <Label x:Name="lblMsg" Content="Sorteando...." HorizontalAlignment="Left" Margin="32,277,0,0" VerticalAlignment="Top" FontSize="20" Visibility="Hidden"/>

    </Grid>
</Window>
